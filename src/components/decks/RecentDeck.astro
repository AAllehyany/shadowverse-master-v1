---
import { DeckData } from '../../interfaces';
export interface Props {
  deck: DeckData
}

const {deck} = Astro.props
---

<a href={deck.deckLink} target="_blank"
  class="transition duration-300 group flex items-center w-full h-[70px] rounded-lg overflow-hidden bg-primary/90 hover:bg-primary/40 px-3">
  <img src={deck.imageURL} alt={deck.archetype} class=" w-[50px] aspect-square object-cover rounded-md">

  <div class="px-2 flex w-full justify-between items-center">
    <div>
      <h2 class="text-white font-bold text-md font-heading">{deck.archetype}</h2>
      <span class="text-white text-xs text-center">By: Unkown</span>
    </div>
  </div>
