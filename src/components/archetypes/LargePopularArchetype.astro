---
import { ArchetypeData } from '../../interfaces';


export interface Props{

  archetype: ArchetypeData
}

const { archetype } = Astro.props;
---

<a href={`/archetype/${archetype.slug}`} 
  class="group relative w-full h-96 md:row-span-2 col-span-2 md:col-span-1 overflow-hidden 
  border border-secondary">
  <img src={archetype.imageURL} alt={archetype.slug}
  class="w-full h-full object-cover absolute 
  transition duration-300 group-hover:scale-105 ">
  <div class="w-full h-full flex items-end justify-center absolute">
    <div class="py-1 w-full flex items-center bg-secondary justify-center">
      <h1 class="text-primary text-md px-3 truncate">{archetype.name}</h1>
    </div>
  </div>
</a>