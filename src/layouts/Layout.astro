---
import '@fontsource/oswald';
import '@fontsource/merriweather';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-primary">
		<div class="p-5 w-full max-w-screen-md mx-auto flex justify-between items-center">
			<a href="/" class="text-secondary font-bold text-xl">Shadowverse MASTER</a>
			<div class="flex items-center">
				<a href="/decks" class="text-md text-accent mr-5">Decks</a>
				<a href="/new-deck" class="text-md text-white bg-accent hover:bg-secondary mr-5 px-4 py-2 font-bold rounded-md">Add Deck</a>
			</div>
		</div>
		<div class="p-5">
			<slot />
		</div>

		<div class="mt-8 w-full max-w-screen-md mx-auto flex justify-center">
			<span class="text-sm text-secondary">
				Shadowverse Master
			</span>
		</div>
	</body>
</html>