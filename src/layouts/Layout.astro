---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-primary">
		<div class="w-full max-w-screen-md mx-auto py-5 flex justify-between items-center">
			<a href="/" class="text-secondary font-bold text-xl">Shadowverse Data</a>
			<div class="flex items-center">
				<a href="#" class="text-md text-accent mr-5">About</a>
				<a href="#" class="text-md text-accent mr-5">Decks</a>
			</div>
		</div>
		<slot />
	</body>
</html>